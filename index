<body>
    <div id="clock" style="text-align:center; font-size:1.5rem; margin-bottom: 20px;"></div>
    <div class="container">
        <h1>My To-Do List</h1>
        <input type="text" id="taskInput" placeholder="Add a new task...">
        <button id="addButton">Add</button>
        <ul id="taskList"></ul>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const taskInput = document.getElementById('taskInput');
            const addButton = document.getElementById('addButton');
            const taskList = document.getElementById('taskList');

            function addTask() {
                const taskText = taskInput.value.trim();
                if (taskText !== "") {
                    const newTask = document.createElement('li');
                    newTask.innerHTML = `
                        <span>${taskText}</span>
                        <div class="status-buttons">
                            <button class="started-btn">Started</button>
                            <button class="half-btn">50% Done</button>
                            <button class="done-btn">100% Done</button>
                            <button class="delete-button">Delete</button>
                        </div>
                    `;
                    const startedBtn = newTask.querySelector('.started-btn');
                    const halfBtn = newTask.querySelector('.half-btn');
                    const doneBtn = newTask.querySelector('.done-btn');
                    const deleteBtn = newTask.querySelector('.delete-button');
                    const span = newTask.querySelector('span');

                    startedBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        newTask.classList.remove('half', 'completed');
                        newTask.classList.add('started');
                    });
                    halfBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        newTask.classList.remove('started', 'completed');
                        newTask.classList.add('half');
                    });
                    doneBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        newTask.classList.remove('started', 'half');
                        newTask.classList.add('completed');
                    });
                    deleteBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        taskList.removeChild(newTask);
                    });
                    span.addEventListener('click', function(e) {
                        newTask.classList.toggle('completed');
                    });
                    taskList.appendChild(newTask);
                    taskInput.value = "";
                }
            }

            addButton.addEventListener('click', addTask);
            taskInput.addEventListener('keypress', function(event) {
                if (event.key === 'Enter') {
                    addTask();
                }
            });
        });
        
    </script>
    
    <script src="js/clock.js"></script>
</body>
